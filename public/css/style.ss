body {
  background-color: #fef6f0;
  font-family: "Poppins", sans-serif;
}

.navbar {
  background-color: #ffe6f0;
}

.nav-link {
  color: #8c5e7a !important;
}

.page-title {
  color: #8c5e7a;
  margin-bottom: 1rem;
}

.card {
  background-color: #fff0f6;
  border: none;
}

.btn-pastel {
  background-color: #8c5e7a;
  color: #fff;
  border-radius: 8px;
}

.badge {
  background-color: #d9c5ff;
  color: #5b3fa3;
  padding: 6px 12px;
  border-radius: 12px;
}
