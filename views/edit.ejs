<%- include("partials/header") %>

<div class="container">
  <h1>Edit Movie</h1>

  <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <input type="text" name="title" value="<%= movie.title %>" required>
    <input type="text" name="genre" value="<%= movie.genre %>" required>
    <input type="number" name="year" value="<%= movie.year %>" required>

    <select name="status">
      <option <%= movie.status === "Watching" ? "selected" : "" %>>Watching</option>
      <option <%= movie.status === "Completed" ? "selected" : "" %>>Completed</option>
      <option <%= movie.status === "Plan to Watch" ? "selected" : "" %>>Plan to Watch</option>
    </select>

    <button class="btn">Save</button>
  </form>
</div>

<%- include("partials/footer") %>
