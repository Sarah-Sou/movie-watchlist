<%- include("partials/header") %>

<div class="container">
  <h1>Your Movies</h1>

  <a href="/movies/new" class="btn">Add New Movie</a>

  <div>
    <% movies.forEach(m => { %>
      <div style="border:1px solid #ccc; padding:15px; border-radius:8px; margin:15px 0;">
        <p><strong>Title:</strong> <%= m.title %></p>
        <p><strong>Genre:</strong> <%= m.genre %></p>
        <p><strong>Year:</strong> <%= m.year %></p>
        <p><strong>Status:</strong> <%= m.status %></p>

        <a href="/movies/<%= m._id %>/edit" class="btn">Edit</a>
        <a href="/movies/<%= m._id %>/delete" class="btn">Delete</a>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
